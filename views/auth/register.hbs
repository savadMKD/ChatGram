<section class="register">
    <div class="register_content">
        <div class="logoImg">
            <img src="/img/logo.png" alt="ChatGram">
        </div>
        {{> messages}}
        <div class="form">
            <form action="/register" method="POST">
                <div>
                    <input type="text" value="{{username}}" name="username" placeholder="Enter Username">
                </div>
                <div>
                    <input type="email" value="{{email}}" name="email" placeholder="Enter Email">
                </div>
                <div>
                    <input type="password" value="{{password}}" name="password" placeholder="Enter Password">
                </div>

                <div class="register_button">
                    <input type="submit" value="Register">
                </div>
                <div class="alert_login">
                    <a href="/login">Login to account</a>
                </div>
            </form>
        </div>
    </div>
</section>