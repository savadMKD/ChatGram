{{!-- Form Validation --}}
{{#if errors}}
{{#each errors}}
<div class="alert alert-warning" id="alert">
    {{message}}
</div>
{{/each}}
{{/if}}

{{#if success_msg}}
<div class="alert alert-warning" id="alert">
    {{success_msg}}
</div>
{{/if}}

{{#if error_msg}}
<div class="alert alert-warning" id="alert">
    {{error_msg}}
</div>
{{/if}}

{{#if error}}
<div class="alert alert-warning" id="alert">
    {{error}}
</div>
{{/if}}